#%RAML 0.8
title: "Vendor-Module"
version: v1

schemas:
  - vendor: !include schemas/vendor.json
  - error: !include schemas/error.json

/vendor:
  /{vendor_id}:
    uriParameters:
      vendor_id:
        type: "integer"
    get:
      description: "Fetch vendor with (vendor_id)"
      responses:
        200:
          description: "Fetch vendor info"
          body:
            application/json:
              schema: vendor
