#%RAML 1.0
title: "Vendors"
baseUri: https://github.com/folio-org/mod-vendors
version: v1

documentation:
  - title: Vendor Addresses
    content: <b>CRUD APIs used to manage vendor addresses.</b>

types:
    vendor_address: !include acq-models/mod-vendors/schemas/vendor_address.json
    vendor_address_collection: !include acq-models/mod-vendors/schemas/vendor_address_collection.json
    UUID:
      type: string
      pattern: ^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$

traits:
    orderable: !include raml-util/traits/orderable.raml
    pageable:  !include raml-util/traits/pageable.raml
    searchable: !include raml-util/traits/searchable.raml
    language: !include raml-util/traits/language.raml

resourceTypes:
    collection: !include raml-util/rtypes/collection.raml
    collection-item: !include raml-util/rtypes/item-collection.raml


/vendors/vendor_addresses:
  type:
    collection:
      exampleCollection: !include acq-models/mod-vendors/examples/vendor_address_collection.sample
      exampleItem: !include acq-models/mod-vendors/examples/vendor_address_post.sample
      schemaCollection: vendor_address_collection
      schemaItem: vendor_address
  get:
    description: Get list of vendor addresses
    is: [
      searchable: {description: "with valid searchable fields: for example code", example: "[\"code\", \"MEDGRANT\", \"=\"]"},
      pageable
    ]
  /{id}:
    uriParameters:
      id:
        description: The UUID of Vendor Address
        type: UUID
    type:
      collection-item:
        exampleItem: !include acq-models/mod-vendors/examples/vendor_address_get.sample
        schema: vendor_address
